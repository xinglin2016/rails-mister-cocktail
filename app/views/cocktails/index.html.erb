<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url('<%= image_path "cocktail.jpeg" %>');">
      <h1>The Mister Cocktails</h1>
  </div>

  <div class="cocktail-cards">
    <% @cocktails.reverse_each do |cocktail|%>
      <%= link_to cocktail_path(cocktail.id) do %>
        <div class="cocktail-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= cl_image_path cocktail.photo.key if cocktail.photo.attached? %>)">
          <div class="cocktail-name">
            <%= cocktail.name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-outline-secondary" %>
</div>

